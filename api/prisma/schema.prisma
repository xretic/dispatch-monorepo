generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Site {
  id        String   @id @default(uuid())
  name      String
  city      String
  status    String
  createdAt DateTime @default(now())
  events    Event[]
}

model Event {
  id        String   @id @default(uuid())
  siteId    String
  type      String
  message   String
  ack       Boolean  @default(false)
  createdAt DateTime @default(now())
  site      Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)
}
