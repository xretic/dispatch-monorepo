generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum STATUS {
  ERROR
  WARNING
  DDOS
  STABLE
}

model Site {
  id        String   @id @default(uuid())
  name      String
  city      String
  status    STATUS
  createdAt DateTime @default(now())
  events    Event[]
}

model Event {
  id        String   @id @default(uuid())
  siteId    String
  type      STATUS
  message   String
  createdAt DateTime @default(now())
  site      Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)
}
